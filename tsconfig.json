{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
  "next-env.d.ts",
  "**/*.ts",
  "**/*.tsx",
  "global.d.ts",  // ✅ 명시하거나, 위 패턴에 포함되면 생략 가능
  ".next/types/**/*.ts"
]
,
  "exclude": ["node_modules"]
}